<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="attendance-create content">
        <h2>Add Member</h2>
        <form action="/person/add" method="POST">
            <fieldset>
                <legend>Personal Details</legend>
                <label for="firstName">First Name: </label>
                <input type="text" id="firstName" name="firstName" required>
                <label for="middleName">Middle Name: </label>
                <input type="text" id="middleName" name="middleName" required>
                <label for="lastName">Last Name: </label>
                <input type="text" id="lastName" name="lastName" required>
                <label for="gender">Gender: </label>
                <input type="text" id="gender" name="gender" required>
                <label for="birthdate">Birthday: </label>
                <input type="date" id="birthdate" name="birthdate" required>
                <label for="age">Age: </label>
                <input type="number" id="age" name="age" required>
                <label for="civilStatus">Civil Status: </label>
                <input type="text" id="civilStatus" name="civilStatus" required>
            </fieldset>
            <fieldset>
                <legend>Address</legend>
                <label for="address1">Address 1: </label>
                <textarea type="text" id="address1" name="address1" required></textarea>
                <label for="address2">Address 2: </label>
                <textarea type="text" id="address2" name="address2"></textarea>
                <label for="city">City: </label>
                <input type="text" id="city" name="city" required>
                <label for="region">Region: </label>
                <input type="text" id="region" name="region" required>
                <label for="country">Country: </label>
                <input type="text" id="country" name="country" required>
            </fieldset>
            <fieldset>
                <legend>Contact Details</legend>
                <label for="contactNumber">Contact Number: </label>
                <input type="number" id="contactNumber" name="contactNumber" required>
                <label for="email">Email: </label>
                <input type="email" id="email" name="email" required>
                <fieldset>
                    <legend>Social Media</legend>
                    <label for="facebook">Facebook: </label>
                    <input type="text" id="facebook" name="facebook">
                    <label for="instagram">Instagram: </label>
                    <input type="text" id="instagram" name="instagram">
                </fieldset>
            </fieldset>
           
            <button>Submit</button>
        </form>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>